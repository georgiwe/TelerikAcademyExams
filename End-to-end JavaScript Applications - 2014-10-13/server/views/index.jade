extends shared/layout
block main-content
    h1.text-center Welcome to Telerik Events System

    .row.text-left
      h1
        | Public Uploads

      table(class='table table-striped table-hover')
        thead
          tr
            th Event Title
            th Event Description
            th Event Location
            th Event Date
            th Event Score
        tbody
          each event in events
            tr
              td #{event.title}
              td #{event.desc}
              td #{event.location}
              td #{event.date}
              td #{event.score}

      div.text-center
        ul(class='pagination')
          li
            a.prev-arrow
              | «
          - for(var j = 0; j < (events.length / 10); j++) {
            li
              a.page-num
                | #{j + 1}
          - }
          li
            a.next-arrow
              | »